<%= form_with(model: exercise_name_voc, local: true) do |form| %>
  <% if exercise_name_voc.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(exercise_name_voc.errors.count, "ошибки") %> не дает сохранить упражнение:</h2>

      <ul>
        <% exercise_name_voc.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-1 mr-1">
    <button type="button" class="close btn btn-success mb-2" data-dismiss="modal">X</button>
  </div>
  <div class="form-group mt-1 mx-1">
    <%= form.label 'Название' %>
    <%= form.text_field :label, class: 'form-control field-width-my' %>
  </div>
  <div class="actions mx-1 my-1">
    <%= form.submit 'Сохранить', class: 'btn btn-success mt-2 btn-width-my-two' %>
  </div>
<% end %>
