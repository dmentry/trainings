<h3 class="center text_size mt-2">Список упражнений</h3>
<%= link_to(image_pack_tag("home.png", alt: 'home', class: 'img-home'), trainings_path, class: 'for-mobile buffer_top_home') %>

<div class="container my-bg-color">
  <div class="row my-1 no-margins-row">

    <div class="col-lg-8 no-paddings no-margins mt-2 mb-0 max_height_all_tr">
      <div class="border p-2 m-2 bg-light">
      <div class="my-0">
        <% @exercise_name_vocs.each do |exercise_name_voc| %>
          <div><%= link_to exercise_name_voc.label, edit_exercise_name_voc_path(exercise_name_voc) %></div>
        <% end %>
        </div>
      </div>
    </div>

    <div class="col-lg-4 no-paddings no-margins">
      <div class="border p-2 m-2 bg-light">
      <div>Создать новое упражнение</div>
      <div class="row mt-3">
        <div class="col-sm-12 col-md-12">
          <%= render partial: 'exercise_name_vocs/form', locals: {exercise_name_voc: @exercise_name_voc = ExerciseNameVoc.new }  %>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
