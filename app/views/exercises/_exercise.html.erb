<table class="table table-sm table-buffers-vertical table-font-my">
  <thead>
    <tr class="table-buffers-vertical">
      <th class="table-info table-buffers-vertical"><%= exercise.exercise_name_voc.label %>
        <div class="float-right">
          <%= link_to(image_pack_tag("edit.png", alt: 'edit', class: 'img-execise edit_symbol'), edit_training_exercise_path(exercise.training, exercise), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}) %> |
          <%= link_to(image_pack_tag("del.png", alt: 'delete', class: 'img-execise delete_symbol'), training_exercise_path(exercise.training, exercise), method: :delete, data: { confirm: "Вы уверены?" }) %> | 

          <% if exercise.ordnung != @training.exercises.pluck(:ordnung).min %>
            <%= link_to(image_pack_tag("up.png", alt: 'up', class: 'img-execise edit_symbol'), training_exercise_up_path(exercise.training, exercise), class: 'up_direction') %>
          <% else %>
            <%= image_pack_tag("up.png", alt: 'down', class: 'img-execise edit_symbol symbol_opacity') %>
          <% end %>

          <% if exercise.ordnung != @training.exercises.pluck(:ordnung).max %>
            <%= link_to(image_pack_tag("down.png", alt: 'down', class: 'img-execise edit_symbol'), training_exercise_down_path(exercise.training, exercise), class: 'down_direction') %>
          <% else %>
            <%= image_pack_tag("down.png", alt: 'down', class: 'img-execise edit_symbol symbol_opacity') %>
          <% end %>
        </div>
      </th>
    </tr>
  </thead>
  <tbody>
    <tr class="table-buffers-vertical">
      <td class="table-buffers-vertical">            
        Количество:
        <%= exercise.quantity %>
      </td>
    </tr>
    <tr class="table-buffers-vertical">
      <td class="table-buffers-vertical">            
        Сумма:
        <% if exercise.exercise_name_voc.label && exercise.exercise_name_voc.label.match?(/бег|лыжи|Бег|Лыжи/) %>
          <%= exercise.summ %>
        <% else %>
          <%= exercise.summ.to_i %>
        <% end %>
      </td>
    </tr>
  <% if exercise.note.present? %>
    <tr class="table-buffers-vertical">
      <td class="table-buffers-vertical">            
        Заметка:
        <%= exercise.note %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
