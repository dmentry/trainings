<table class="table table-sm table-buffers-vertical table-font-my">
  <thead>
    <tr class="table-buffers-vertical">
      <th class="table-info table-buffers-vertical"><%= exercise.exercise_name_voc.label %></th>
    </tr>
  </thead>
  <tbody>
    <tr class="table-buffers-vertical">
      <td class="table-buffers-vertical">            
        Подходы:
        <%= exercise.quantity %>
      </td>
    </tr>
    <tr class="table-buffers-vertical">
      <td class="table-buffers-vertical">            
        Сумма:
        <% if exercise.exercise_name_voc.label && exercise.exercise_name_voc.label.match?(/бег|лыжи|Бег|Лыжи/) %>
          <%= exercise.summ %>
        <% else %>
          <%= exercise.summ.to_i %>
        <% end %>
      </td>
    </tr>
    <tr class="table-buffers-vertical">
      <td class="table-buffers-vertical">            
        Заметки:
        <%= exercise.note %>
      </td>
    </tr>
    <tr class="table-buffers-vertical">
      <td class="table-buffers-vertical">            
        <%= link_to('Удалить | ', training_exercise_path(exercise.training, exercise), method: :delete, data: {confirm: t('.destroy_confirm')} ) %>
        <%= link_to 'Редактировать', edit_training_exercise_path(exercise.training, exercise) %>
      </td>
    </tr>
  </tbody>
</table>
