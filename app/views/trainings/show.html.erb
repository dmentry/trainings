<div class="center">
  <h1> 
    <%= link_to '<', @training.prev, class: "h1 btn btn-primary mt-1 buffer-bottom" %>
    <%= link_to @training.label, edit_training_path(@training), class: "h1 btn btn-primary mt-1 buffer-bottom" %>
    <%= link_to '>', @training.next, class: "h1 btn btn-primary mt-1 buffer-bottom" %>
  </h1>
</div>

<div class="container bg-light">
  <div class="row my-3">
    <div class="col-lg-7 order-lg-1 no-paddings">
      <div class="border p-1 m-1">
          <div class="bold">
            Дата: <%= l @training.start_time, format: :my_format %>
          </div>
          <div class="my-3">
            <%= render partial: 'exercises/exercise', collection: @training.exercises.except(@exercise) %>
            <% if @training.exercises.empty? %>
              Вы еще не внесли ни одного упражнения в эту тренировку
            <% end %>
          </div>
      </div>
    </div>

    <div class="col-lg-5 order-lg-1 no-paddings">
      <div class="border p-1 m-1">
        <div>Добавить упражнение:</div>
        <div class="row mt-3">
          <div class="col-sm-12 col-md-12">
            <%= render partial: 'exercises/form', locals: {exercise: @exercise || @training.exercises.build} %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
