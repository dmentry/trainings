<h3 class="center text_size mt-2 head_color">Загрузчик тренировок</h3>
<div class="container bg-light">
  <div class="row my-3">

    <div class="col-lg-8 order-lg-1 no-paddings">
      <div class="p-1 m-1">
        <div class="my-3">
          <%= form_tag trainings_upload_post_trainings_path, multipart: true do %>
            <div class="form-group mt-3">
              <%= label_tag "ID пользователя" %><br>
              <%= text_field_tag :user_id %>
            </div>
            <div class="form-group mt-3">
              <%= label_tag 'Файл с тренировками' %><br>
              <%= file_field_tag :trainings_file %>
            </div>
            <div class="actions">
              <%= submit_tag %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
  </div>
 </div>