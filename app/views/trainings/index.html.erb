<h1 class="center text_size">Календарь тренировок</h1>
<div class="container my-bg-color">
  <div class="row my-3">

    <div class="col-lg-8 order-lg-1 mb-3 mt-1 no-paddings">
      <h2 id="month">
        <div class="date-my">
          <%= link_to "<", date: @date.prev_month %>
        </div>
        <div class="date-my date-width-my">
          <%= l(@date, format: "%B, %Y") %>
        </div>
        <div class="date-my">
          <%= link_to ">", date: @date.next_month %>
        </div>
      </h2>
      <%= calendar @date do |date| %>
        <%= date.day %>
        <div>
          <% if @trainings_by_date[date] %>
            <% @trainings_by_date[date].each do |training| %>
              <div class="cal-font">
                <%= link_to training.label, training %>
              </div>
            <% end %> 
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="border col-lg-3 order-lg-2 mb-3 mt-3 buffer-top buffer-both-sm bg-light no-margins max_height_month_tr">
      <%= link_to 'Создать тренировку', new_training_path %>
      <div class="mt-1">
        <% unless @trainings_by_month.empty? %>
          <div class="top_line_my">Тренировки в этом месяце:</div>
        <% end %>
        <% @trainings_by_month.each do |training| %>
          <div> <%= link_to training.label, training %></div>
        <% end %>
      </div>
    </div>
    
  </div>
</div>
