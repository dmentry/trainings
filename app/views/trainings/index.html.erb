<h1 class="center text_size">Trainings</h1>
<div class="container bg-light">
  <div class="row my-3">
    <div class="col-sm-12 col-md-10">
      <%#= render 'feedback_form', feedback: @feedback %>

      <table>
        <thead>
          <tr>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @trainings.each do |training| %>
            <tr>
              <td><%= training.label %></td>
              <td><%#= link_to 'Show', training %></td>
              <td><%#= link_to 'Edit', edit_training_path(training) %></td>
              <td><%#= link_to 'Destroy', training, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= link_to 'New Training', new_training_path %>
      <br>
      <%= month_calendar(events: @trainings) do |date, trainings| %>
        <%= date.day %>

        <% trainings.each do |training| %>
          <div>
            <%= training.label %>
          </div>
        <% end %>  
      <% end %>

    </div>
  </div>
</div>
