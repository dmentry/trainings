<%= form_with(model: user, local: true, html: { multipart: true }) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mt-3">
    <% if @user.avatar? %>
      <p><%= image_tag(@user.avatar.url, class: 'user_avatar_edit') %></p>
    <% else %>
      <p><%= image_pack_tag'user.png', class: 'user_avatar' %></p>
    <% end %>   
    <%= form.file_field :avatar %>
  </div>

  <div class="form-group mt-3">
    <%= form.label 'Имя' %>
    <%= form.text_field :name, class: 'form-control w-50 lg_text' %>
  </div>

  <div class="form-group mt-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control w-50 lg_text' %>
  </div>

  <div class="row justify-content-start mb-2">
    <div class='col-12 col-lg-5 mr-1 mr-lg-0'>
      <%= form.submit 'Сохранить', class: 'btn btn-sm btn-success btn-width-my lg_text px-0 mt-1' %>
    </div>
    <div class='col-12 col-lg-5 mr-1 mr-lg-0'>
      <%= link_to('Обратно', user_path, class: 'btn btn-sm btn-secondary btn-width-my lg_text px-0 mt-1') %>
    </div>
  </div>
<% end %>
