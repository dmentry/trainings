<h3 class="center text_size mt-2">Пользователи</h3>
<%= link_to(image_pack_tag("home.png", alt: 'home', class: 'img-home'), trainings_path, class: 'for-mobile buffer_top_home') %>

<div class="container my-bg-color">
  <div class="row my-1 no-margins-row">
    <div class="col-lg-12 no-paddings no-margins mt-2 mb-0 max_height_all_tr">
      <div class="border p-2 m-2 bg-light">
      <div class="my-0">

        <table class="table table-sm table-buffers-vertical table-font-my">
          <thead>
            <tr class="table-buffers-vertical">
              <th class="table-info table-buffers-vertical">Имя</th>
              <th class="table-info table-buffers-vertical">Email</th>
              <th class="table-info table-buffers-vertical">Создан</th>
              <th class="table-info table-buffers-vertical">Изменен</th>
              <th class="table-info table-buffers-vertical">Действия</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr class="table-buffers-vertical">
                <td class="table-buffers-vertical">            
                  <%= user.name %>
                </td>
                <td class="table-buffers-vertical">            
                  <%= user.email %>
                </td>
                <td class="table-buffers-vertical">            
                  <%= user.created_at.strftime("%d.%m.%Y, %H:%M") %>
                </td>
                <td class="table-buffers-vertical">            
                  <%= user.updated_at.strftime("%d.%m.%Y, %H:%M") %>
                </td>
                <td class="table-buffers-vertical">            
                  <%= link_to 'Show', user %> | 
                  <%= link_to 'Destroy', user, method: :delete, data: { confirm: "Вы уверены?" } %>        
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
    </div>
  </div>
</div>
