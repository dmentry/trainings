<%= link_to(image_pack_tag("home.png", alt: 'home', class: 'img-home'), trainings_path, class: 'for-mobile buffer_top_home') %>
<h3 class="center text_size mt-5 mt-lg-2 head_color">Пользователи</h3>
<div class="container bg-light borders-rounded">
<div class="row">
  <div class="col-lg-12 bg-light mx-0 px-0">
    <table class="table table-sm table-font-my mb-0">
      <thead>
        <tr>
          <th class="table-info table-buffers-vertical">id</th>
          <th class="table-info table-buffers-vertical">Имя</th>
          <th class="table-info table-buffers-vertical">Email</th>
          <th class="table-info table-buffers-vertical">Создан</th>
          <th class="table-info table-buffers-vertical">Логинился</th>
          <th class="table-info table-buffers-vertical">Провайдер</th>
        </tr>
      </thead>
      <tbody>
        <% @data.each do |user| %>
          <tr>
            <td>            
              <%= user.first.id %>
            </td>
            <td>
              <%= link_to user.first.name, admin_login_as_user_user_path(user.first) %>
            </td>
            <td>            
              <%= user.first.email %>
            </td>
            <td>            
              <%= user.first.created_at.strftime("%d.%m.%Y") %>
            </td>
            <td>
              <% if user.second == '0001-01-01 01:00:00 +0000' %>
                  -
              <% else %>
                <%= user.first.current_sign_in_at&.strftime("%d.%m.%Y, %H:%M") %>
              <% end %>
            </td>
            <td>            
              <%= user.third %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>