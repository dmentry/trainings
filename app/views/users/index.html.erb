<h3>Users</h3>
<% @users.each do |user| %>
  <div>
    <div>
      <%= user.name %>
    </div>      
    <div>
      <%= link_to 'Show', user %>
      <%= link_to 'Edit', edit_user_path(user) %>
      <%= link_to 'Destroy', user, method: :delete, data: { confirm: "Вы уверены?" } %>
    </div>
  </div>
  <br>
<% end %>
