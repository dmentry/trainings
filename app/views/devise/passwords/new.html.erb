<h3 class="center mt-2 head_color">Восстановление пароля</h3>
<div class="container bg-body-secondary borders-rounded lg_text">
  <div class="row">
    <div class="col-12 col-lg-5 mb-3 mx-auto">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group mt-3 w-50 mx-auto">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mt-2 lg_text' %>
        </div>
        <div class="actions mt-3 text-center">
          <%= f.submit "Отправить инструкции по смене пароля", class: 'btn btn-secondary mt-2' %>
        </div>
      <% end %>   
    </div>
  </div>
</div>
