<h3 class="center buffer-top head_color">Регистрация</h3>
<div class="container bg-body-secondary borders-rounded lg_text">
  <div class="row">
    <div class="col-12 col-lg-5 mb-3 mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group mt-3 w-50 mx-auto">
          <%= f.label 'Имя' %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control lg_text' %>
        </div>
        <div class="form-group mt-3 w-50 mx-auto">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control lg_text' %>
        </div>
        <div class="form-group mt-3 w-50 mx-auto">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> символов минимум)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control lg_text' %>
        </div>
        <div class="form-group mt-3 w-50 mx-auto">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control lg_text' %>
        </div>
        <div class="actions text-center">
          <%= f.submit "Зарегистрироваться", class: 'btn btn-secondary mt-2' %>
        </div>
      <% end %>
      <%#= render "devise/shared/links" %>
    </div>
  </div>
</div>
