<%= link_to(image_pack_tag("home.png", alt: 'home', class: 'img-home'), trainings_path, class: 'for-mobile buffer_top_home') %>
<h3 class="text-center text_size mt-5 mt-lg-2 head_color">Действия с аккаунтом</h3>
<div class="container bg-light lg_text">
  <div class="row my-3">
    <div class="col-lg-8 mb-3 mx-auto pt-2">
      <h5>Редактирование пароля</h5>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="form-group mt-3">
          <%= f.label :password %> <i>(оставьте пустым, если не хотите менять его)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control w-50' %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> символов минимум</em>
          <% end %>
        </div>
        <div class="form-group mt-3">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control w-50' %>
        </div>
        <div class="form-group mt-3">
          <%= f.label :current_password %> <i>(нужен, чтобы подтвердить внесенные изменения)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control w-50' %>
        </div>
        <div class="d-flex flex-column flex-sm-row mb-2 me-5 pe-5 mt-2">
          <%= f.submit 'Обновить', class: 'btn btn-sm btn-success mt-2 lg_text me-0 me-sm-1' %>
          <%= link_to('Обратно', :back, class: 'btn btn-sm btn-secondary mt-2 lg_text') %>
        </div>
      <% end %>
<!--       <div class="mt-3">
        <h5>Удалить аккаунт</h5>
      </div> -->
      <%#= button_to "Удалить мой аккаунт", registration_path(resource_name), data: { confirm: "Вы уверены?" }, method: :delete, class: 'btn btn-danger btn-width-my' %>
    </div>
  </div>
</div>
