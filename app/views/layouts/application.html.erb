            <% else %>
              <li><%= link_to 'Войти', new_user_session_path, class: 'btn bg-light pr-3' %></li>
              <li><%= link_to 'Зарегистрироваться', new_user_registration_path, class: 'btn bg-light px-3' %></li>
              <li><%= link_to 'Восстановить пароль', new_password_path(resource_name), class: 'btn bg-light pl-3' %></li>
            <% end %>
          </ul>

