          </div>
        </div>
      </div>
    

    <a class="navbar-toggler d-lg-none d-sm" data-toggle="collapse" href="#collapseMenu" role="button" aria-expanded="false" aria-controls="collapseMenu">
      <%= image_pack_tag("menu-4x.png", alt: 'menu') %>
